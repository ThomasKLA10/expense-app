#!/bin/bash
set -e

# Enable PostgreSQL access
bbdeployor enable-psql

# Enable SMTP for email notifications
bbdeployor enable-smtp

# Install additional dependencies
apt-get update
apt-get install -y \
    tesseract-ocr \
    tesseract-ocr-eng \
    tesseract-ocr-deu \
    tesseract-ocr-nor \
    tesseract-ocr-spa \
    tesseract-ocr-nld \
    poppler-utils \
    cron

# Clean up
apt-get clean
rm -rf /var/lib/apt/lists/*

# Send notification
bbdeployor message "Container configuration completed for receiptsbonn" 